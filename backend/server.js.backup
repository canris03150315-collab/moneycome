app.post(`${base}/lottery-sets/:id/tickets/lock`, async (req, res) => {
  try {
    const sess = await getSession(req);
    if (!sess?.user) {
      return res.status(401).json({ message: 'Unauthorized' });
    }
    
    const { id } = req.params;
    const { ticketIndices } = req.body;
    
